@using System.ComponentModel
@model Project

@{
    ViewData["Title"] = "CreateProject";
}
<link rel="stylesheet" type="text/css" href="/css/navbar.css">
<script src="js/chosen.jquery.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" type="text/javascript"></script>

<div class="text-center container">
    <h1>CreateProject</h1>

    <h4>Project</h4>
    <hr/>
    <form asp-action="PostProject">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="projectId" type="hidden" class="form-control" value="-1"/>
        <div class="form-group">
            <label class="control-label">Name</label>
            <input asp-for="name" class="form-control"/>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <input asp-for="status" class="form-control" type="hidden" value="ongoing"/>
        <div class="form-group">
            <label class="control-label">Number of iterations in the project</label>
            <input asp-for="numberOfIterations" class="form-control"/>
            <span asp-validation-for="numberOfIterations" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Length of the sprint in days</label>
            <input asp-for="lengthOfSprint" class="form-control"/>
            <span asp-validation-for="lengthOfSprint" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select multiple class="sel" style="width: 200px;">
                <option>lalala</option>
                <option>lalala</option>
                <option>lalala</option>
                <option>lalala</option>
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary"/>
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
<script src="js/navbar.js"></script>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}