@model ContainerForListAndId<UserStory>

@{
    ViewData["Title"] = "Product Backlog";
}

<!DOCTYPE html>

<html>
<head>
    <title>Product Backlog</title>
    <link rel="stylesheet" type="text/css" href="/css/custom.css">
</head>
<body>
<button class="w3-button w3-black w3-card-4" onclick="goToPreviousWebsite()">< Back</button>
    <br />
    <br />
<h1>User Stories</h1>
<div class="row">
    <div class="structure">
        <button class="w3-button w3-black w3-card-4" onclick="location.href='@Url.Action("AddUserStory", "Backlog", new {sprintId = Model.id })'">Add a user story</button>
        <ul>
            @foreach (var item in Model.accessList)
            {
                <li class="flex-row">
                <p>@item.description</p>                   
                <button class="w3-button w3-black w3-card-4" onclick="location.href='@Url.Action("DeleteUserStory", "Backlog", @item)'">Delete user story</button>
                </li>
            }
        </ul>
</div>
</div>
</body>
</html>