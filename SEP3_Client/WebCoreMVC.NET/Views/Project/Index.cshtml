@model IEnumerable<WebCoreMVC.NET.Models.Project>

@{
    ViewData["Title"]="Projects";
}
    <head>
        <link rel="stylesheet" type="text/css" href="/css/react.css">

    </head>
<body>
    <h1>Projects</h1>
<div class="row">
        <div class="structure">
            @foreach(var item in Model) {
                <div class="project">
                    <h1>@Html.DisplayFor(modelItem => item.name)</h1>
                    <div class="buttonContainer">
                        <button class="example_c" asp-area="" asp-controller="Sprint" asp-action="Index">Sprints</button>
                        <button class="example_c">Product Backlog</button>
                        <div class="break"> </div>
                        <button class="example_c">Burndown Chart</button>
                        <button class="example_c">Edit Project</button>
                        <div class="break"> </div>
                        <button class="example_c">Edit Members</button>
                        <button class="example_c">Leave Project</button>
                    </div>
                </div>
            }
        </div>

    </div>
<div class="col-md-2">
    <input class="text-center" type="button" value="Create" onclick="location.href='@Url.Action("CreateProject")'" />
</div>
</body>
