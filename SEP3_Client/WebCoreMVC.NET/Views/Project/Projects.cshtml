@model IEnumerable<WebCoreMVC.NET.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<h1>Person</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Project ID
            </th>
            <th>
                Name
            </th>
            <th>
                Status
            </th>
            <th>
                Number of iterations
            </th>
            <th>
                Length Of Sprint
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.projectId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numberOfIterations)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lengthOfSprint)
                </td>
            </tr>

        }
    </tbody>
</table>

